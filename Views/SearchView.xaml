<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Books.Views.SearchView"
             xmlns:viewModel="clr-namespace:Books.ViewModels"
             xmlns:models="clr-namespace:Books.Models"
             x:DataType="viewModel:SearchViewModel"
             Title="SearchView"
             BackgroundColor="#3A4E48">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Button Text="Wróć"
                    BackgroundColor="#BEB0A7"
                    TextColor="#040303"
                    BorderColor="#040303"
                    BorderWidth="2"
                    WidthRequest="100"
                    HorizontalOptions="Start"
                    Command="{Binding BackCommand}"/>
            <SearchBar Placeholder="Wpisz tytuł lub autora"
                       Text="{Binding SearchQuery}"
                       TextColor="#040303"
                       SearchCommand="{Binding SearchBooksCommand}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}" />

            <CollectionView ItemsSource="{Binding Books}"
                            VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Book">
                        <Frame BackgroundColor="#8B9D83"
                               BorderColor="#040303"
                               Padding="10"
                               Margin="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:SearchViewModel}}, Path=ShowBookDetailsCommand}"
                                                      CommandParameter="{Binding .}"
                                                      NumberOfTapsRequired="1" />
                            </Frame.GestureRecognizers>
                            <StackLayout Orientation="Vertical"
                                         Padding="5">
                                <Label Text="{Binding Title}"
                                       FontSize="Large"
                                       TextColor="#040303"
                                       FontAttributes="Bold" />
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="{Binding Thumbnail}"
                                               WidthRequest="75"
                                               HeightRequest="100" />
                                        <StackLayout Padding="20">

                                        <Label Text="{Binding Authors}"
                                               FontSize="Medium"
                                               TextColor="#040303" />
                                        <Label Text="{Binding PublishedDate}"
                                               FontSize="Small"
                                               TextColor="#040303" />
                                    </StackLayout>

                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>