<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Books.Views.SearchView"
             xmlns:viewModel="clr-namespace:Books.ViewModels"
             xmlns:models="clr-namespace:Books.Models"
             x:DataType="viewModel:SearchViewModel"
             Title="SearchView">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <SearchBar Placeholder="Wpisz tytuÅ‚ lub autora"
                       Text="{Binding SearchQuery}"
                       SearchCommand="{Binding SearchBooksCommand}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}" />

            <CollectionView ItemsSource="{Binding Books}"
                            VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Book">
                        <Frame BackgroundColor="YellowGreen"
                               BorderColor="Black">
                            <StackLayout Orientation="Vertical"
                                         Padding="5">
                                <Label Text="{Binding Title}"
                                       FontSize="Large"
                                       TextColor="Black"
                                       FontAttributes="Bold" />
                                <StackLayout Orientation="Horizontal">
                                <Frame BorderColor="Black">
                                    <Image Source="{Binding Thumbnail}"
                                           WidthRequest="50"
                                           HeightRequest="75" />
                                </Frame>
                                <StackLayout Padding="20">
                                    
                                    <Label Text="{Binding Authors}"
                                           FontSize="Medium" />
                                    <Label Text="{Binding PublishedDate}"
                                           FontSize="Small" />
                                    </StackLayout>

                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>